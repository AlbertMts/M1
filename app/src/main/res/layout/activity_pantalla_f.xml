<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >


<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaF"
    android:background="#2D0099FF"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Información acerca de la Alerta"
            android:textStyle="bold"
            android:textSize="25dp"
            tools:ignore="MissingConstraints" />


        <TextView
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción: "
            android:textStyle="bold"
            android:textSize="25dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/textBi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ems="10"
            android:lines="2"
            android:inputType= "textMultiLine"
            android:scrollbars="vertical"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            tools:ignore="MissingConstraints"
            />

        <TextView
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicación: "
            android:textStyle="bold"
            android:textSize="25dp"
            tools:ignore="MissingConstraints"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/vistall"
            android:textColor="#2D0099FF"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/vislat"
            android:textColor="#2D0099FF"
            />



        <fragment
            android:layout_marginTop="20dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            />



        <TextView
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evidencia: "
            android:textStyle="bold"
            android:textSize="25dp"
            tools:ignore="MissingConstraints"
            />

        <ImageView
            android:id="@+id/evidenc"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:onClick="onclick"

            />

        <Button
            android:id="@+id/Enviar_evidencia"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#3498DB  "
            android:text="Enviar Evidencia"

            />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>